.hx-comment {
  position: relative;
}
.hx-comment .hx-bb {
  margin-left: 11px;
  border-bottom: 1px solid #efefef;
}
.hx-comment_dividing-line15 {
  height: 15px;
  background: #efefef;
  width: 100%;
}
.hx-comment_dividing-line {
  height: 2px;
  background: #efefef;
  width: 100%;
}
.hx-comment_basic-info {
  height: 82px;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}
.hx-comment_basic-info_left {
  display: flex;
  flex-direction: column;
  width: 100px;
}
.hx-comment_basic-info_left_top {
  font-size: 32px;
  margin-bottom: 2px;
  color: #ff9800;
}
.hx-comment_basic-info_left_bottom {
  font-size: 12px;
  color: #555555;
}
.hx-comment_basic-info_center {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.hx-comment_basic-info_center_item {
  font-size: 12px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.hx-comment_basic-info_center_item_left {
  color: #555555;
}
.hx-comment_basic-info_center_item_center {
  margin: 0 6px 0 8px;
  height: 0;
}
.hx-comment_basic-info_center_item_right {
  color: #FF9800;
}
.hx-comment_basic-info_right {
  width: 100px;
  display: flex;
  flex-direction: column;
  border-left: 1px solid #efefef;
}
.hx-comment_basic-info_right_top {
  font-size: 26px;
  margin-bottom: 2px;
  color: #999999;
}
.hx-comment_basic-info_right_bottom {
  font-size: 12px;
  color: #999999;
}
.hx-comment_main-box .lists .item {
  padding: 20rpx;
  display: flex;
  font-size: 22rpx;
  color: #999;
}
.hx-comment_main-box .lists .item .icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 26rpx;
  border: 1px solid #efefef;
}
.hx-comment_main-box .lists .item .info {
  flex: 1;
  font-size: 16px;
  color: #000;
}
.hx-comment_main-box .lists .item .info .name-time {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.hx-comment_main-box .lists .item .info .name-time .name {
  font-size: 16px;
  color: #000;
}
.hx-comment_main-box .lists .item .info .name-time .time {
  font-size: 12px;
  color: #999;
}
.hx-comment_main-box .lists .item .info .stars {
  padding: 6px 0 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.hx-comment_main-box .lists .item .info .stars text {
  font-size: 12px;
  color: #999;
  margin-right: 6px;
}
.hx-comment_main-box .lists .item .info .stars .uni-rate {
  height: 0;
}
.hx-comment_main-box .lists .item .info .evaluate-content {
  color: #555555;
  font-size: 14px;
  text-align: left;
  padding-top: 4px;
}
.hx-comment_main-box .lists .item .info .evaluate-content .imgs {
  display: flex;
  flex-wrap: wrap;
  padding-top: 4px;
}
.hx-comment_main-box .lists .item .info .evaluate-content .imgs .imgs-box {
  width: 25%;
  padding-right: 5px;
  box-sizing: border-box;
}
.hx-comment_main-box .lists .item .info .evaluate-content .imgs .imgs-box image {
  border-radius: 4px;
}
.hx-comment_main-box .no-lists {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

